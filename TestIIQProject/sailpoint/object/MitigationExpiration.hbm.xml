<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
  "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
  "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd" [
  <!ENTITY SailPointObject SYSTEM "classpath://sailpoint/object/SailPointObject.hbm.xml">
]>

<!-- (c) Copyright 2008 SailPoint Technologies, Inc., All Rights Reserved. -->

<hibernate-mapping>
  <class name="sailpoint.object.MitigationExpiration">

    &SailPointObject;

    <property name="expiration" type="sailpoint.persistence.DateType" not-null="true" />
    <many-to-one embed-xml="false" name="mitigator" class="sailpoint.object.Identity" not-null="true" />
    <!-- length necessary for db2 -->
    <property name="comments" type="materialized_clob" length="8192"/>
    
    <many-to-one embed-xml="false" name="identity"
                 class="sailpoint.object.Identity"
                 column="identityId"/>

    <property name="certificationLink" type="sailpoint.persistence.XmlType" length="100000000"/>
    <property name="certifiableDescriptor" type="sailpoint.persistence.XmlType" length="100000000"/>

    <property name="action">
      <type name="sailpoint.persistence.EnumType">
        <param name="enumClassName">sailpoint.object.MitigationExpiration$Action</param>
      </type>
    </property>
    <property name="actionParameters" type="sailpoint.persistence.XmlType" length="100000000"/>

    <property name="lastActionDate" type="sailpoint.persistence.DateType" />

    <property name="roleName" type="string" length="128" index="spt_mitigation_role"/>
    <property name="policy" type="string" length="128" index="spt_mitigation_policy"/>
    <property name="constraintName" type="string" length="2000" />
    <property name="application" type="string" length="128" index="spt_mitigation_app"/>
    <property name="instance" type="string" length="128" index="spt_mitigation_instance"/>
    <property name="nativeIdentity" type="string" length="322" index="spt_mitigation_account_ci"/>
    <property name="accountDisplayName" type="string" length="128"/>
    <property name="attributeName" type="string" length="450" index="spt_mitigation_attr_name_ci"/>
    <property name="attributeValue" type="string" length="450" index="spt_mitigation_attr_val_ci"/>
    <property name="permission" type="boolean" index="spt_mitigation_permission"/>

  </class>
</hibernate-mapping>

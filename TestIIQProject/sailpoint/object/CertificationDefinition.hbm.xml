<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
  "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
  "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd" [
  <!ENTITY SailPointObject SYSTEM "classpath://sailpoint/object/SailPointObject.hbm.xml">
]>

<!-- (c) Copyright 2008 SailPoint Technologies, Inc., All Rights Reserved. -->

<hibernate-mapping>
  <class name="sailpoint.object.CertificationDefinition">

    &SailPointObject;

    <property name="name" type="string" length="255" unique="true" not-null="true" />

    <property name="description" type="string" length="1024" />

    <property name="attributes" type="sailpoint.persistence.XmlType" 
              length="100000000"/>

    <list name="tags" table="certification_def_tags" cascade="persist,merge,save-update">
      <key column="cert_def_id"/>
      <list-index column="idx"/>
      <many-to-many class="sailpoint.object.Tag"/>
    </list>

  </class>
</hibernate-mapping>

<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
  "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
  "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd" [
  <!ENTITY IndexBase "identity_scorecard">
  <!ENTITY SailPointObject SYSTEM "classpath://sailpoint/object/SailPointObject.hbm.xml">
  <!ENTITY GenericIndex SYSTEM "classpath://sailpoint/object/GenericIndex.hbm.xml">
  <!ENTITY BaseIdentityIndex SYSTEM "classpath://sailpoint/object/BaseIdentityIndex.hbm.xml">
]>

<!-- (c) Copyright 2008 SailPoint Technologies, Inc., All Rights Reserved. -->

<hibernate-mapping>
  <class name="sailpoint.object.Scorecard" dynamic-update="true" dynamic-insert="true">

    &SailPointObject;
    &GenericIndex;
    &BaseIdentityIndex;

    <many-to-one embed-xml="false" name="identity" column="identityId" class="sailpoint.object.Identity"/>

  </class>
</hibernate-mapping>


<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
  "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
  "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd" [
  <!ENTITY SailPointObject SYSTEM "classpath://sailpoint/object/SailPointObject.hbm.xml">
]>

<!-- (c) Copyright 2008 SailPoint Technologies, Inc., All Rights Reserved. -->

<hibernate-mapping>
  <class name="sailpoint.object.Form">

    &SailPointObject;

    <property name="name" type="string" length="128" unique="true" not-null="true"/>
    <property name="description" type="string" length="4000"/>
    <property name="hidden" type="boolean"/>
    <property name="type">
      <type name="sailpoint.persistence.EnumType">
        <param name="enumClassName">sailpoint.object.Form$Type</param>
      </type>
    </property>

    <many-to-one embed-xml="false" name="application" class="sailpoint.object.Application"/>

    <!-- Oddment: pull from the original sections column even though the type
         of the property is now FieldItem.  Could migrate someday but it's not
         that important.
    -->
    <property name="items" column="sections" type="sailpoint.persistence.XmlType" length="100000000"/>

    <!-- temporary until they've all been moved to the item list -->
    <property name="hibernateButtons" column="buttons" type="sailpoint.persistence.XmlType" length="100000000"/>

    <property name="attributes" type="sailpoint.persistence.XmlType" length="100000000"/>

  </class>
</hibernate-mapping>

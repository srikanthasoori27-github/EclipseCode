<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
  "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
  "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd" [
  <!ENTITY SailPointObject SYSTEM "classpath://sailpoint/object/SailPointObject.hbm.xml">
]>

<!-- (c) Copyright 2008 SailPoint Technologies, Inc., All Rights Reserved. -->

<hibernate-mapping>
  <class name="sailpoint.object.Dictionary">  
  
    &SailPointObject;
    
    <property name="name" type="string" length="128"/>
    
    <list name="terms" cascade="all">
      <key column="dictionaryId"/>
      <list-index column="idx"/>
      <one-to-many class="sailpoint.object.DictionaryTerm"/>
    </list>

  </class>
</hibernate-mapping>

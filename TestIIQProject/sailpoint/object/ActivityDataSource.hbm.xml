<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
  "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
  "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd" [
  <!ENTITY SailPointObject SYSTEM "classpath://sailpoint/object/SailPointObject.hbm.xml">
]>

<!-- (c) Copyright 2008 SailPoint Technologies, Inc., All Rights Reserved. -->

<hibernate-mapping>
  <class name="sailpoint.object.ActivityDataSource">

    &SailPointObject;
    <property name="name" type="string" length="128" not-null="true" />
    <property name="description" type="string" length="1024"/>

    <property name="collector"/>
    <property name="type"/>
    <property name="configuration" type="sailpoint.persistence.XmlType" length="100000000"/>
    <property name="lastRefresh" type="sailpoint.persistence.DateType"/>
    <property name="targets" type="sailpoint.persistence.XmlType" length="100000000"/>
    <many-to-one embed-xml="false" name="correlationRule" class="sailpoint.object.Rule"/>
    <many-to-one embed-xml="false" name="transformationRule" class="sailpoint.object.Rule"/>
  </class>
</hibernate-mapping>

<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
  "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
  "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd" [
  <!ENTITY SimpleSailPointObject SYSTEM "classpath://sailpoint/object/SailPointObjectSimple.hbm.xml">
]>

<!-- (c) Copyright 2008 SailPoint Technologies, Inc., All Rights Reserved. -->

<hibernate-mapping>
  <class name="sailpoint.object.FullTextIndex">

    &SimpleSailPointObject;

    <property name="name" type="string" length="128" unique="true" not-null="true"/>
    <property name="description" type="string" length="1024"/>

    <!-- this was taken out of SailPointObject.hbm.xml for some reason
         so we have to map it in each subclass as necessary
    -->
    <property name="lock" column="iiqlock" type="string" length="128"/>

    <property name="lastRefresh" type="sailpoint.persistence.DateType"/>
    <property name="attributes" type="sailpoint.persistence.XmlType" length="100000000"/>

  </class>
</hibernate-mapping>

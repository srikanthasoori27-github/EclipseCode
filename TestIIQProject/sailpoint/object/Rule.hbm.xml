<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
  "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
  "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd" [
  <!ENTITY SailPointObject SYSTEM "classpath://sailpoint/object/SailPointObject.hbm.xml">
]>

<!-- (c) Copyright 2008 SailPoint Technologies, Inc., All Rights Reserved. -->

<hibernate-mapping>
  <class name="sailpoint.object.Rule">

    &SailPointObject;
    <property name="name" type="string" length="128" unique="true" not-null="true"/>
    <property name="description" type="string" length="1024"/>

    <property name="language" type="string"/>
    <property name="source" type="materialized_clob" length="100000000"/>

    <property name="type">
      <type name="sailpoint.persistence.EnumType">
        <param name="enumClassName">sailpoint.object.Rule$Type</param>
      </type>
    </property>

    <property name="attributes" type="sailpoint.persistence.XmlType" length="100000000"/>

    <list name="referencedRules" table="RuleDependencies"
          cascade="persist,merge,save-update">
      <key column="ruleId"/>
      <list-index column="idx"/>
      <many-to-many column="dependency" class="sailpoint.object.Rule"/>
    </list>

    <!-- Note that Signature is also used by TaskDefinition and
         RequestDefinition, so if you change the definition here, you probably
         also need to change TaskDefinition.hbm.xml and
         RequestDefinition.hbm.xml
     -->
    <component name="signature" class="sailpoint.object.Signature">

      <property name="description" type="materialized_clob" column="sigDescription" length="8192"/>
      <property name="returnType"/>

      <list name="arguments" table="RuleSignatureArguments">
        <key column="signature"/>
        <list-index column="idx"/>
        <composite-element class="sailpoint.object.Argument">
          <property name="name"/>
          <property name="type"/>
          <property name="filterString"/>
          <property name="description" type="materialized_clob" length="8192"/>
          <property name="prompt" type="materialized_clob" length="8192"/>
          <property name="multi" type="boolean"/>
        </composite-element>
      </list>

      <list name="returns" table="RuleSignatureReturns">
        <key column="signature"/>
        <list-index column="idx"/>
        <composite-element class="sailpoint.object.Argument">
          <property name="name"/>
          <property name="type"/>
          <property name="filterString"/>
          <property name="description" type="materialized_clob" length="8192"/>
          <property name="prompt" type="materialized_clob" length="8192"/>
          <property name="multi" type="boolean"/>
        </composite-element>
      </list>
      
      
    </component>

  </class>
</hibernate-mapping>

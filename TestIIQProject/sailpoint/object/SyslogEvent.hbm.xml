<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
  "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
  "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<!-- (c) Copyright 2012 SailPoint Technologies, Inc., All Rights Reserved. -->

<hibernate-mapping>
  <class name="sailpoint.object.SyslogEvent">
  
    <!-- note that we do NOT include SailPointObject because we don't
         assignedScope or assignedScopePath and the related indexes -->
    <id name="id" length="32">
        <generator class="sailpoint.persistence.IdGenerator">
          <param name="uuid_gen_strategy_class">org.hibernate.id.uuid.CustomVersionOneStrategy</param>
        </generator>
    </id>

    <property name="created" type="sailpoint.persistence.DateType" index="spt_syslog_created"/>

    <!--
       Note that other classes use a name index, oracle requires
       that the index name be unique so we have to qualify it.
    -->
    
    <property name="quickKey" type="string" length="12" index="spt_syslog_quickKey" />
    <property name="eventLevel" type="string" length="6" index="spt_syslog_event_level" />
    <property name="classname" type="string" length="128" index="spt_syslog_classname" />
    <property name="lineNumber" type="string" length="6"/>
    <property name="message" type="string" length="450" index="spt_syslog_message" />
    <property name="thread" type="string" length="128"/>
    <property name="server" type="string" length="128" index="spt_syslog_server" />
    <property name="username" type="string" length="128" index="spt_syslog_username" />

    <property name="stacktrace" type="materialized_clob" length="100000000"/>

  </class>
</hibernate-mapping>

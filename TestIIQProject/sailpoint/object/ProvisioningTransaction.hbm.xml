<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
  "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
  "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<!-- (c) Copyright 2016 SailPoint Technologies, Inc., All Rights Reserved. -->

<hibernate-mapping>
  <class name="sailpoint.object.ProvisioningTransaction">

    <id name="id" length="32">
        <generator class="sailpoint.persistence.IdGenerator">
          <param name="uuid_gen_strategy_class">org.hibernate.id.uuid.CustomVersionOneStrategy</param>
        </generator>
    </id>

    <!-- Generated sequential id from Sequencer -->
    <property name="name" type="string" length="255" index="spt_prvtrans_name"/>
    <property name="created" type="sailpoint.persistence.DateType" index="spt_prvtrans_created"/>
    <property name="modified" type="sailpoint.persistence.DateType"/>

    <property name="operation" type="string" index="spt_prvtrans_op"/>
    <property name="source" type="string" index="spt_prvtrans_src"/>
    <property name="applicationName" type="string" index="spt_prvtrans_app_ci"/>
    <property name="identityName" type="string" index="spt_prvtrans_idn_ci"/>
    <property name="identityDisplayName" type="string" index="spt_prvtrans_iddn_ci"/>
    <property name="nativeIdentity" type="string" length="322" index="spt_prvtrans_nid_ci"/>
    <property name="accountDisplayName" type="string" length="322" index="spt_prvtrans_adn_ci"/>
    <property name="attributes" type="sailpoint.persistence.XmlType" length="100000000"/>
    <property name="integration" type="string" index="spt_prvtrans_integ_ci" />
    <property name="certificationId" type="string" length="32" />

    <!-- adding index to boolean here because we expect sparse true values in a table
         that could potentially be be very large -->
    <property name="forced" type="boolean" index="spt_prvtrans_forced" />

    <property name="type" index="spt_prvtrans_type">
      <type name="sailpoint.persistence.EnumType">
        <param name="enumClassName">sailpoint.object.ProvisioningTransaction$Type</param>
      </type>
    </property>

    <property name="status" index="spt_prvtrans_status">
      <type name="sailpoint.persistence.EnumType">
        <param name="enumClassName">sailpoint.object.ProvisioningTransaction$Status</param>
      </type>
    </property>

  </class>
</hibernate-mapping>

<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
  "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
  "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd" [
  <!ENTITY SimpleSailPointObject SYSTEM "classpath://sailpoint/object/SailPointObjectSimple.hbm.xml">
]>

<!-- (c) Copyright 2011 SailPoint Technologies, Inc., All Rights Reserved. -->

<hibernate-mapping>
  <class name="sailpoint.object.ResourceEvent">

    &SimpleSailPointObject;

    <many-to-one embed-xml="false" name="application" class="sailpoint.object.Application"/>

    <!-- note that this has to be named something other than "plan" because
         that's a reserved word in SQLServer
    -->
    <property name="plan" column="provisioningPlan"
              type="sailpoint.persistence.XmlType" length="100000000"/>

  </class>
</hibernate-mapping>

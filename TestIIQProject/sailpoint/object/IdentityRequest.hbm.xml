<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
  "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
  "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd" [
  <!ENTITY SailPointObject SYSTEM "classpath://sailpoint/object/SailPointObject.hbm.xml">
]>

<!-- (c) Copyright 2008 SailPoint Technologies, Inc., All Rights Reserved. -->

<hibernate-mapping>

  <class name="sailpoint.object.IdentityRequest"
    dynamic-update="true" dynamic-insert="true">  

    &SailPointObject;

    <!-- Stored sequence id -->
    <property name="name" type="string" length="255" index="spt_idrequest_name"/>
    
    <property name="state" index="spt_idrequest_state"/>
    <property name="type" index="spt_idrequest_type"/>
    <property name="source"/>

    <property name="targetId" index="spt_idrequest_target_id" length="128"/>
    <property name="targetDisplayName" index="spt_idrequest_target_ci"/>
    <property name="targetClass"/>

    <property name="requesterDisplayName" index="spt_idrequest_requestor_ci"/>
    <property name="requesterId" index="spt_idrequest_requestor_id" length="128"/>

    <property name="endDate" type="sailpoint.persistence.DateType" index="spt_idrequest_endDate"/>
    <property name="verified" type="sailpoint.persistence.DateType" 
              index="spt_idrequest_verified"/>

    <property name="priority" length="128" index="spt_idrequest_priority">
      <type name="sailpoint.persistence.EnumType">
        <param name="enumClassName">sailpoint.object.WorkItem$Level</param>
        <param name="enumDefaultValue">Normal</param>
        <param name="persistOrdinal">true</param>
      </type>
    </property>

    <property name="completionStatus" length="128" index="spt_idrequest_compl_status">
      <type name="sailpoint.persistence.EnumType">
        <param name="enumClassName">sailpoint.object.IdentityRequest$CompletionStatus</param>
      </type>
    </property>
    
    <property name="executionStatus" length="128" index="spt_idrequest_exec_status">
      <type name="sailpoint.persistence.EnumType">
        <param name="enumClassName">sailpoint.object.IdentityRequest$ExecutionStatus</param>
      </type>
    </property>
    
    <property name="hasMessages" index="spt_idrequest_has_messages" type="boolean" not-null="true"/>
    
    <property name="externalTicketId" index="spt_idrequest_ext_ticket_ci" length="128"/>    
   
    <list name="items" cascade="all">
      <key column="identityRequestId"/>
      <list-index column="idx"/>
      <one-to-many class="sailpoint.object.IdentityRequestItem"/>
    </list>

    <property name="attributes" type="sailpoint.persistence.XmlType" length="100000000"/>
    
  </class>
</hibernate-mapping>

<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd" [
        <!ENTITY SailPointObject SYSTEM "classpath://sailpoint/object/SailPointObject.hbm.xml">
        ]>

<hibernate-mapping>
  <class name="sailpoint.object.MonitoringStatistic">

    &SailPointObject;

    <property name="name" type="string" length="128" unique="true" not-null="true"/>
    <property name="displayName" type="string" length="128"/>
    <property name="description" type="string" length="1024"/>
    <property name="value" type="string" length="4000"/>
    <property name="valueType" type="string" length="128"/>
    <property name="type" type="string" length="128"/>
    <bag name="tags" cascade="persist,merge,save-update">
      <key column="statistic_id" not-null="true"/>
      <many-to-many class="sailpoint.object.Tag"/>
    </bag>
    <property name="attributes" type="sailpoint.persistence.XmlType" length="100000000"/>
    <property name="template" type="boolean"/>

  </class>

</hibernate-mapping>

<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
  "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
  "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd" [
  <!ENTITY SailPointObject SYSTEM "classpath://sailpoint/object/SailPointObject.hbm.xml">
]>

<!-- (c) Copyright 2008 SailPoint Technologies, Inc., All Rights Reserved. -->

<hibernate-mapping>
  <class name="sailpoint.object.MiningConfig">

    &SailPointObject;

    <property name="name" type="string" length="128" unique="true" not-null="true"/>
    <property name="description" type="string" length="1024"/>

    <!-- 
      Note that the population is in here rather than represented
      as a true Hibernate relationship.
    -->
    <property name="arguments" type="sailpoint.persistence.XmlType" 
      length="100000000"/>


    <!-- Before 3.0 we called these "constraints" but they were never used.
         They're now "sources" but we're reusing the old column name
         to avoid a schema change.
    -->
    <property name="sources" type="sailpoint.persistence.XmlType" 
      length="100000000" column="app_constraints" />

  </class>
</hibernate-mapping>




<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
  "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
  "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd" [
  <!ENTITY SailPointObject SYSTEM "classpath://sailpoint/object/SailPointObject.hbm.xml">
]>

<!-- (c) Copyright 2013 SailPoint Technologies, Inc., All Rights Reserved. -->

<hibernate-mapping>
  <class name="sailpoint.object.DynamicScope">

    &SailPointObject;
    
    <property name="name" type="string" length="128" unique="true" not-null="true"/>
    <property name="description" type="string" length="1024"/>

    <property name="selector" type="sailpoint.persistence.XmlType" length="100000000"/>


    <list name="inclusions" table="DynamicScopeInclusions"
       cascade="persist,merge,save-update">
      <key column="dynamicScopeId"/>
      <list-index column="idx"/>
      <many-to-many column="identityId" class="sailpoint.object.Identity"/>
    </list>

    <list name="exclusions" table="DynamicScopeExclusions"
       cascade="persist,merge,save-update">
      <key column="dynamicScopeId"/>
      <list-index column="idx"/>
      <many-to-many column="identityId" class="sailpoint.object.Identity"/>
    </list>

    <property name="allowAll" type="boolean"/>
    
    <property name="populationRequestAuthority" type="sailpoint.persistence.XmlType" length="100000000"/>
    
    <many-to-one embed-xml="false" name="roleRequestControl" class="sailpoint.object.Rule"/>
    
    <many-to-one embed-xml="false" name="applicationRequestControl" class="sailpoint.object.Rule"/>
    
    <many-to-one embed-xml="false" name="managedAttributeRequestControl" class="sailpoint.object.Rule" column="managed_attr_request_control"/>

    <many-to-one embed-xml="false" name="roleRemoveControl" class="sailpoint.object.Rule"/>
    
    <many-to-one embed-xml="false" name="applicationRemoveControl" class="sailpoint.object.Rule"/>
    
    <many-to-one embed-xml="false" name="managedAttributeRemoveControl" class="sailpoint.object.Rule" column="managed_attr_remove_control"/>
  </class>
</hibernate-mapping>

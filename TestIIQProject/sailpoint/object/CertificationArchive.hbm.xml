<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
  "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
  "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd" [
  <!ENTITY SailPointObject SYSTEM "classpath://sailpoint/object/SailPointObject.hbm.xml">
]>

<!-- (c) Copyright 2008 SailPoint Technologies, Inc., All Rights Reserved. -->

<hibernate-mapping>
  <class name="sailpoint.object.CertificationArchive">

    &SailPointObject;
    <!-- these may have names, but they are not unique keys -->
    <property name="name" type="string" length="256"/>

    <property name="certificationId" index="spt_cert_archive_id"/>
    <property name="certificationGroupId" index="spt_cert_archive_grp_id"/>  

    <list name="childCertificationIds" cascade="all" table="ChildCertificationIds">
      <key column="certification_archive_id"/>
      <list-index column="idx"/>
      <element type="string" column="child_id"/>
    </list>

    <property name="signed" type="sailpoint.persistence.DateType"/>
    <property name="expiration" type="sailpoint.persistence.DateType"/>
      
    <property name="creatorName" column="creator" length="128"
              index="spt_cert_archive_creator"/>

    <property name="comments" type="materialized_clob" length="8192"/>

    <!-- Make the length huge so that we'll get the largest text type of column. -->
    <property name="archive" type="materialized_clob" length="100000000" />
    
    <property name="immutable" type="boolean"/>

  </class>
</hibernate-mapping>

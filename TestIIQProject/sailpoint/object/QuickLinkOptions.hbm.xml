<hibernate-mapping>
	<class name="sailpoint.object.QuickLinkOptions">

		&SailPointObjectChild;
		
		<property name="allowBulk" type="boolean" />
		<property name="allowOther" type="boolean" />
		<property name="allowSelf" type="boolean" />
		<property name="options" type="sailpoint.persistence.XmlType" length="100000000"/>
		
		<many-to-one embed-xml="false" name="dynamicScope" class="sailpoint.object.DynamicScope" not-null="true"/>
        <many-to-one embed-xml="false" name="quickLink" class="sailpoint.object.QuickLink"/>

	</class>
</hibernate-mapping>

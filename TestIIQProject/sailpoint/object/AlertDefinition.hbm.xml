<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd" [
        <!ENTITY SailPointObject SYSTEM "classpath://sailpoint/object/SailPointObject.hbm.xml">
        ]>

<hibernate-mapping>
  <class name="sailpoint.object.AlertDefinition">

    &SailPointObject;


    <property name="matchConfig" type="sailpoint.persistence.XmlType" length="100000000"/>
    <property name="disabled" type="boolean"/>
    <property name="name" type="string" length="128" unique="true" not-null="true"/>
    <property name="description" type="string" length="1024"/>
    <property name="displayName" type="string" length="128"/>
    <property name="actionConfig" type="sailpoint.persistence.XmlType" length="100000000"/>

  </class>

</hibernate-mapping>

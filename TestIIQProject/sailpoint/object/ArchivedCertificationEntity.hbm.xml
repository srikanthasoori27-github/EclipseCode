<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
  "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
  "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd" [
  <!ENTITY SailPointObject SYSTEM "classpath://sailpoint/object/SailPointObject.hbm.xml">
]>

<!-- (c) Copyright 2008 SailPoint Technologies, Inc., All Rights Reserved. -->

<hibernate-mapping>
  <class name="sailpoint.object.ArchivedCertificationEntity" table="spt_archived_cert_entity">

    &SailPointObject;

    <property name="entity" type="sailpoint.persistence.XmlType" length="100000000" />

    <property name="reason">
      <type name="sailpoint.persistence.EnumType">
        <param name="enumClassName">sailpoint.object.ArchivedCertificationEntity$Reason</param>
      </type>
    </property>

    <list name="items" cascade="all">
      <key column="parent_id"/>
      <list-index column="idx"/>
      <one-to-many class="sailpoint.object.ArchivedCertificationItem"/>
    </list>

    <!--
      This is coming from a rule so can be arbitrarily long.  We'll assume that we
      don't need searching for now and let it be a clob.  If this becomes a requirement
      we can shrink the column and truncate the value.
     -->
    <property name="explanation" type="materialized_clob" length="100000000" />


    <many-to-one embed-xml="false" name="certification"
                 class="sailpoint.object.Certification"
                 column="certification_id"/>

    <property name="targetName" index="spt_arch_entity_tgt_name_csi" />
    <property name="identity" column="identityName" index="spt_arch_entity_identity_csi" length="450"/>
    <property name="accountGroup" index="spt_arch_entity_acct_grp_csi" length="450"/>
    <property name="application" index="spt_arch_entity_app" />
    <property name="nativeIdentity" index="spt_arch_entity_native_id" type="string" length="322"/>
    <property name="referenceAttribute" index="spt_arch_entity_ref_attr" />
    <property name="schemaObjectType" column="schemaObjectType" />
    <property name="targetId" index="spt_arch_entity_target_id" />
    <property name="targetDisplayName" index="spt_arch_entity_tgt_display" />

  </class>
</hibernate-mapping>

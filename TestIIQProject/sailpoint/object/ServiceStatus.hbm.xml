<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
  "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
  "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd" [
  <!ENTITY SailPointObjectSimple SYSTEM "classpath://sailpoint/object/SailPointObjectSimple.hbm.xml">
]>

<!-- (c) Copyright 2008 SailPoint Technologies, Inc., All Rights Reserved. -->

<hibernate-mapping>
  <class name="sailpoint.object.ServiceStatus">

    &SailPointObjectSimple;

    <property name="name" type="string" length="128" unique="true" not-null="true"/>
    <property name="description" type="string" length="1024"/>

    <many-to-one embed-xml="false" name="definition" class="sailpoint.object.ServiceDefinition"/>

    <property name="host"/>
    <property name="lastStart" type="sailpoint.persistence.DateType"/>
    <property name="lastEnd" type="sailpoint.persistence.DateType"/>

    <property name="attributes" type="sailpoint.persistence.XmlType" length="100000000"/>

  </class>
</hibernate-mapping>

<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
  "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
  "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd" [
  <!ENTITY SailPointObject SYSTEM "classpath://sailpoint/object/SailPointObject.hbm.xml">
]>

<!-- (c) Copyright 2008 SailPoint Technologies, Inc., All Rights Reserved. -->

<hibernate-mapping>
  <class name="sailpoint.object.ProvisioningRequest">

    &SailPointObject;

    <many-to-one embed-xml="false" name="identity" column="identityId" class="sailpoint.object.Identity"/>

    <property name="target" type="string" length="128"/>
    <property name="requester" type="string" length="128"/>
    <property name="expiration" type="sailpoint.persistence.DateType" index="spt_provreq_expiration"/>
    <!-- plan is a reserved word for SQLServer -->
    <property name="plan" column="provisioningPlan" type="sailpoint.persistence.XmlType" length="100000000"/>

  </class>
</hibernate-mapping>

<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
  "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
  "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd" [
  <!ENTITY SailPointObject SYSTEM "classpath://sailpoint/object/SailPointObject.hbm.xml">
]>

<!-- (c) Copyright 2008 SailPoint Technologies, Inc., All Rights Reserved. -->

<hibernate-mapping>
  <class name="sailpoint.object.IntegrationConfig">

    &SailPointObject;

    <property name="name" type="string" length="128" unique="true" not-null="true"/>
    <property name="description" type="string" length="4000"/>
    <property name="executor" type="string"/>
    <property name="execStyle" type="string"/>
    <property name="roleSyncStyle" type="string"/>
    <property name="template" type="boolean"/>
    <property name="maintenanceExpiration"/>

    <property name="signature" type="sailpoint.persistence.XmlType" length="100000000"/>
    <property name="attributes" type="sailpoint.persistence.XmlType" length="100000000"/>
    
    <many-to-one embed-xml="false" name="planInitializer" class="sailpoint.object.Rule" />

    <!-- 
       3.0 had a "managedResources" property that we're not upgrading
       so use a different name.
     -->
    <property name="resources" type="sailpoint.persistence.XmlType" length="100000000"/>

    <many-to-one embed-xml="false" name="application" column="applicationId" class="sailpoint.object.Application"/>

    <list name="synchronizedRoles" table="SyncRoles"
          cascade="persist,merge,save-update">
      <key column="config"/>
      <list-index column="idx"/>
      <many-to-many column="bundle" class="sailpoint.object.Bundle"/>
    </list>

    <property name="roleSyncFilter" type="sailpoint.persistence.FilterType" length="4000"/>

    <many-to-one embed-xml="false" name="roleSyncContainer" column="containerId" class="sailpoint.object.Bundle"/>


  </class>
</hibernate-mapping>

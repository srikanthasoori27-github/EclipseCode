<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
  "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
  "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd" [
  <!ENTITY SailPointObject SYSTEM "classpath://sailpoint/object/SailPointObject.hbm.xml">
  <!ENTITY WorkItemMonitor SYSTEM "classpath://sailpoint/object/WorkItemMonitor.hbm.xml">
]>

<!-- (c) Copyright 2008 SailPoint Technologies, Inc., All Rights Reserved. -->

<hibernate-mapping>
  <class name="sailpoint.object.CertificationAction">

    &SailPointObject;
    &WorkItemMonitor;

    <property name="description" type="string" length="1024"/>

    <property name="status">
      <type name="sailpoint.persistence.EnumType">
        <param name="enumClassName">sailpoint.object.CertificationAction$Status</param>
      </type>
    </property>

    <property name="decisionDate" type="sailpoint.persistence.DateType"/>
    <property name="decisionCertificationId" type="string" length="128"/>

    <property name="reviewed" type="boolean"/>
    <property name="bulkCertified" type="boolean"/>
    <property name="mitigationExpiration" type="sailpoint.persistence.DateType" />

    <property name="remediationAction">
      <type name="sailpoint.persistence.EnumType">
        <param name="enumClassName">sailpoint.object.CertificationAction$RemediationAction</param>
      </type>
    </property>

    <!-- Make this an XmlType so that we can clear the list and not get orphaned items. -->
    <property name="remediationDetails" type="sailpoint.persistence.XmlType" length="100000000" />

    <property name="additionalActions" type="sailpoint.persistence.XmlType" length="100000000" />

    <property name="revokeAccount" type="boolean" />

    <property name="readyForRemediation" type="boolean" index="spt_item_ready_for_remed" />
    <property name="remediationKickedOff" type="boolean" />
    <property name="remediationCompleted" type="boolean" />
    <property name="autoDecision" type="boolean" />

    <many-to-one embed-xml="false" name="sourceAction"
      class="sailpoint.object.CertificationAction"/>

    <list name="childActions" table="cert_action_assoc">
        <key column="parent_id"/>
        <list-index column="idx"/>
        <many-to-many column="child_id"
            class="sailpoint.object.CertificationAction"/>
    </list>

    <list name="parentActions" inverse="true" table="cert_action_assoc">
        <key column="child_id"/>
        <list-index column="idx"/>
        <many-to-many column="parent_id"
            class="sailpoint.object.CertificationAction"/>
    </list>


  </class>
</hibernate-mapping>


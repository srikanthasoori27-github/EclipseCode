<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
  "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
  "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd" [
  <!ENTITY SailPointObject SYSTEM "classpath://sailpoint/object/SailPointObject.hbm.xml">
]>

<!-- (c) Copyright 2008 SailPoint Technologies, Inc., All Rights Reserved. -->

<hibernate-mapping>
  <class name="sailpoint.object.RemediationItem">

    &SailPointObject;

    <property name="description" type="string" length="1024"/>

     <property name="remediationEntityType">
      <type name="sailpoint.persistence.EnumType">
        <param name="enumClassName">sailpoint.object.RemediationItem$RemediationEntityType</param>
      </type>
    </property>

    <many-to-one embed-xml="false" name="workItem"
                 class="sailpoint.object.WorkItem"
                 column="work_item_id"/>

    <property name="certificationItem" />

    <many-to-one embed-xml="false" name="assignee" class="sailpoint.object.Identity"/>
    <property name="remediationIdentity" />
    <property name="remediationDetails" type="sailpoint.persistence.XmlType" length="100000000"/>

    <property name="completionComments" type="materialized_clob" length="8192"/>
    <property name="completionDate" type="sailpoint.persistence.DateType"/>
    
    <property name="assimilated" type="boolean"/>

    <!-- Consider spliting this into a composite element like WorkItem.
         We'll avoid a separate table for now. -->
    <property name="comments" type="sailpoint.persistence.XmlType" length="100000000"/>

    <property name="attributes" type="sailpoint.persistence.XmlType"
              length="100000000"/>

  </class>
</hibernate-mapping>

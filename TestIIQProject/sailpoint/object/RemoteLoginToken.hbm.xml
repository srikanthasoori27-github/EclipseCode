<hibernate-mapping>
  <class name="sailpoint.object.RemoteLoginToken">

    &SailPointObject;

    <property name="name" type="string" length="128" not-null="true"/>
    <property name="creator" type="string" length="128" not-null="true"/>
    <property name="remoteHost" type="string" length="128"/>
    <property name="expiration" type="sailpoint.persistence.DateType" index="spt_remote_login_expiration"/>

  </class>
</hibernate-mapping>

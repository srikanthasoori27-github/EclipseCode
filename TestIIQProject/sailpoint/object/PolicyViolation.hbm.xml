<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
  "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
  "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd" [
  <!ENTITY SailPointObject SYSTEM "classpath://sailpoint/object/SailPointObject.hbm.xml">
]>

<!-- (c) Copyright 2008 SailPoint Technologies, Inc., All Rights Reserved. -->

<hibernate-mapping>
  <class name="sailpoint.object.PolicyViolation"
         dynamic-update="true" dynamic-insert="true">  

    &SailPointObject;

    <!-- The name is the BaseConstraint name which can contain
         summary text longer than a typical object name.
    -->
    <property name="name" type="string" length="2000"/>

    <!-- needs to be long enough for a paragraph or two but not a blob -->
    <property name="description" type="string" length="4000"/>

    <many-to-one embed-xml="false" name="identity" column="identityId" class="sailpoint.object.Identity"/>

    <!-- technically a one-to-one but I don't want to cascade -->
    <many-to-one embed-xml="false" name="pendingWorkflow" class="sailpoint.object.WorkflowCase"/>

    <property name="renderer"/>
    <property name="active" type="boolean" index="spt_policy_violation_active"/>
    <property name="policyId"/>
    <property name="policyName"/>
    <property name="constraintId"/>
    
    <property name="status">
      <type name="sailpoint.persistence.EnumType">
        <param name="enumClassName">sailpoint.object.PolicyViolation$Status</param>
      </type>
    </property>

    <!-- needs to be long enough for a paragraph or two but not a blob -->
    <property name="constraintName" type="string" length="2000"/>

    <!-- length necessary for db2 -->
    <property name="leftBundles" type="materialized_clob" length="8192"/>
    <property name="rightBundles" type="materialized_clob" length="8192"/>
    <property name="activityId"/>
    <property name="bundlesMarkedForRemediation" type="materialized_clob" length="8192"/>
    <property column="entitlementsMarkedForRemed" name="entitlementsMarkedForRemediation" type="materialized_clob" length="8192"/>
    <property name="mitigator"/>
    
    <property name="arguments" type="sailpoint.persistence.XmlType" length="100000000"/>

  </class>
</hibernate-mapping>

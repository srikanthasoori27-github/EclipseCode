<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd" [
        <!ENTITY SimpleSailPointObject SYSTEM "classpath://sailpoint/object/SailPointObjectSimple.hbm.xml">
        ]>

<!-- (c) Copyright 2008 SailPoint Technologies, Inc., All Rights Reserved. -->

<hibernate-mapping>
    <class name="sailpoint.object.RequestState">

        &SimpleSailPointObject;

        <property name="name" type="string" length="450" />

        <property name="attributes" type="sailpoint.persistence.XmlType" length="100000000"/>

        <!-- technically a one-to-one but I don't want to cascade -->
        <many-to-one embed-xml="false" name="request" column="request_id" class="sailpoint.object.Request"/>

    </class>
</hibernate-mapping>

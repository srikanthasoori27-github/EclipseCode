    &SailPointObject;
    <!-- !! can't index in an include file -->
    <property name="name" type="string" length="128" unique="true" not-null="true"/>
    <property name="description" type="string" length="4000"/>

    <property name="executor"/>
    <property name="formPath" type="string" length="128"/>
    <property name="template" type="boolean"/>
    <property name="hidden" type="boolean"/>
    <property name="resultExpiration"/>
    <property name="progressInterval" type="int"/>
    
    <property name="subType" type="string" length="128"/>

    <!--
      Capabilities are defined in subclasses since they have specific table
      mappings for their many-to-many.
     -->

    <property name="type">
      <type name="sailpoint.persistence.EnumType">
        <param name="enumClassName">sailpoint.object.TaskItemDefinition$Type</param>
      </type>
    </property>

    <property name="progressMode">
      <type name="sailpoint.persistence.EnumType">
        <param name="enumClassName">sailpoint.object.TaskItemDefinition$ProgressMode</param>
      </type>
    </property>

    <property name="arguments" type="sailpoint.persistence.XmlType" length="100000000"/>

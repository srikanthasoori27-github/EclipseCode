<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
  "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
  "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd" [
  <!ENTITY SailPointObject SYSTEM "classpath://sailpoint/object/SailPointObject.hbm.xml">
]>

<!-- (c) Copyright 2008 SailPoint Technologies, Inc., All Rights Reserved. -->

<hibernate-mapping>
  <class name="sailpoint.object.IdentityTrigger">

    &SailPointObject;

    <!-- Name is not unique ... do we even need a name? -->
    <property name="name" type="string" length="256" />

    <property name="description" type="string" length="1024"/>

    <property name="disabled" type="boolean"/>

    <property name="type">
      <type name="sailpoint.persistence.EnumType">
        <param name="enumClassName">sailpoint.object.IdentityTrigger$Type</param>
      </type>
    </property>

    <many-to-one embed-xml="false" name="rule" column="rule_id" class="sailpoint.object.Rule"/>

    <property name="attributeName" type="string" length="256" />

    <property name="oldValueFilter" type="string" length="256" />
    <property name="newValueFilter" type="string" length="256" />

    <property name="selector" type="sailpoint.persistence.XmlType" 
      length="100000000"/>
    
    <property name="handler" type="string" length="256" />

    <property name="parameters" type="sailpoint.persistence.XmlType" 
      length="100000000"/>

  </class>
</hibernate-mapping>

    <!-- The name is the BaseConstraint name which can contain
         summary text longer than a typical object name.
    -->
    <property name="name" type="string" length="2000"/>

    <!-- needs to be long enough for a paragraph or two but not a blob -->
    <property name="description" type="string" length="4000"/>    

    <many-to-one embed-xml="false" name="policy" class="sailpoint.object.Policy"/>

    <property name="violationOwnerType">
      <type name="sailpoint.persistence.EnumType">
        <param name="enumClassName">sailpoint.object.Policy$ViolationOwnerType</param>
      </type>
    </property>
    <many-to-one embed-xml="false" name="violationOwner" class="sailpoint.object.Identity"/>
    <many-to-one embed-xml="false" name="violationOwnerRule" class="sailpoint.object.Rule"/>

    <property name="compensatingControl" type="materialized_clob" length="100000000"/>
    <property name="disabled" type="boolean"/>
    <property name="weight"/>
    <property name="remediationAdvice" type="materialized_clob" length="100000000"/>

    <!-- deprecated in 3.0 -->
    <property name="oldViolationSummary" column="violationSummary" type="materialized_clob" length="100000000"/>

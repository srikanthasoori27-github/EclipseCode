<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
  "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
  "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd" [
  <!ENTITY IndexBase "spt_request">
  <!ENTITY SailPointObject SYSTEM "classpath://sailpoint/object/SailPointObject.hbm.xml">
  <!ENTITY TaskItem SYSTEM "classpath://sailpoint/object/TaskItem.hbm.xml">
]>

<!-- (c) Copyright 2008 SailPoint Technologies, Inc., All Rights Reserved. -->

<hibernate-mapping>
  <class name="sailpoint.object.Request">

    &TaskItem;
    <!-- completed moved from TaskItem in 7.0 so it can be selectively indexed -->
    <property name="completed" type="sailpoint.persistence.DateType"/>

    <property name="expiration" type="sailpoint.persistence.DateType" 
              index="spt_request_expiration"/>

    <!--
      Unlike TaskResult we don't require unique names
    -->
    <property name="name" type="string" length="450" index="spt_request_name"/>

    <many-to-one embed-xml="false" name="definition" class="sailpoint.object.RequestDefinition"/>
    <many-to-one embed-xml="false" name="taskResult" class="sailpoint.object.TaskResult"/>

    <property name="phase" type="int" index="spt_request_phase"/>
    <property name="dependentPhase" type="int" index="spt_request_depPhase"/>
    <property name="nextLaunch" type="sailpoint.persistence.DateType" index="spt_request_nextLaunch"/>
    <property name="retryCount" type="int"/>
    <property name="retryInterval" type="int"/>
    <property name="string1" type="string" length="2048"/>
    <property name="live" type="boolean" />

    <property name="completionStatus" index="spt_request_compl_status">
      <type name="sailpoint.persistence.EnumType">
        <param name="enumClassName">sailpoint.object.TaskResult$CompletionStatus</param>
      </type>
    </property>

    <property name="notificationNeeded" index="spt_request_notif_needed" type="boolean"/>

  </class>
</hibernate-mapping>

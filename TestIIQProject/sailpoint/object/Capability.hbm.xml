<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
  "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
  "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd" [
  <!ENTITY SailPointObject SYSTEM "classpath://sailpoint/object/SailPointObject.hbm.xml">
]>

<!-- (c) Copyright 2008 SailPoint Technologies, Inc., All Rights Reserved. -->

<hibernate-mapping>
  <class name="sailpoint.object.Capability">

    &SailPointObject;

    <property name="name" type="string" length="128" unique="true" not-null="true"/>
    <property name="description" type="string" length="1024"/>

    <property name="displayName" type="string" length="128"/>

    <list name="rights" table="CapabilityRights"
          cascade="persist,merge,save-update">
      <key column="capability_id"/>
      <list-index column="idx"/>
      <many-to-many column="right_id" class="sailpoint.object.SPRight"/>
    </list>

    <list name="inheritedCapabilities" table="CapabilityChildren"
          cascade="persist,merge,save-update">
      <key column="capability_id"/>
      <list-index column="idx"/>
      <many-to-many column="child_id" class="sailpoint.object.Capability"/>
    </list>

    <property name="appliesToAnalyzer" type="boolean" />
  </class>
</hibernate-mapping>

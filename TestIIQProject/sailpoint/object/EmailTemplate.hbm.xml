<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
  "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
  "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd" [
  <!ENTITY SailPointObject SYSTEM "classpath://sailpoint/object/SailPointObject.hbm.xml">
]>

<!-- (c) Copyright 2008 SailPoint Technologies, Inc., All Rights Reserved. -->

<hibernate-mapping>
  <class name="sailpoint.object.EmailTemplate">

    &SailPointObject;
    <property name="name" type="string" length="128" unique="true" not-null="true"/>
    <property name="description" type="string" length="1024"/>

    <!-- note that the column name may not be 'from' it conflicts with SQL -->
    <property name="from" column="fromAddress"/>
    <property name="to" column="toAddress"/>
    <property name="cc" column="ccAddress"/>
    <property name="bcc" column="bccAddress"/>
    <property name="subject"/>
    <property name="body" type="materialized_clob" length="100000000"/>

    <!-- See bug 423 about why the key column has a max length of 78. -->
    <map name="sessionProperties" table="EmailTemplateProperties">
      <key column="id" foreign-key="emailtemplateproperties"/>
      <map-key column="name" type="string" length="78"/>
      <element column="value" type="string"/>
    </map>

    <property name="signature" type="sailpoint.persistence.XmlType" length="100000000"/>

  </class>
</hibernate-mapping>

<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
  "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
  "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd" [
  <!ENTITY SailPointObject SYSTEM "classpath://sailpoint/object/SailPointObject.hbm.xml">
]>

<!-- (c) Copyright 2008 SailPoint Technologies, Inc., All Rights Reserved. -->

<hibernate-mapping>
  <class name="sailpoint.object.QuickLink">

    &SailPointObject;

    <property name="name" type="string" length="128" unique="true" not-null="true"/>
    <property name="messageKey" type="string" length="128"/>
    <property name="description" type="string" length="1024"/>
    <property name="action" type="string" length="128"/>
    <property name="cssClass" type="string" length="128"/>
    <property name="hidden" type="boolean"/>
    <property name="category" type="string" length="128"/>
    <property name="ordering" type="int"/>
    <property name="arguments" type="sailpoint.persistence.XmlType" length="100000000"/>
    <bag name="quickLinkOptions" cascade="all">
      <key column="quickLink"/>
      <one-to-many class="sailpoint.object.QuickLinkOptions"/>
    </bag>
  </class>
</hibernate-mapping>

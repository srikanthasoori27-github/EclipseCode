<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
  "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
  "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd" [
  <!ENTITY SailPointObject SYSTEM "classpath://sailpoint/object/SailPointObject.hbm.xml">
  <!ENTITY TargetExtensions SYSTEM "classpath://sailpoint/object/TargetExtended.hbm.xml">
]>

<!-- (c) Copyright 2008 SailPoint Technologies, Inc., All Rights Reserved. -->

<hibernate-mapping>
  <class name="sailpoint.object.Target">

    &SailPointObject;
    &TargetExtensions;
    <property name="name" type="string" length="512"/>
    <property name="nativeOwnerId" type="string" length="128"/>

    <many-to-one embed-xml="false" name="targetSource" class="sailpoint.object.TargetSource"/>
    <many-to-one embed-xml="false" name="application" class="sailpoint.object.Application"/>

    <property name="targetHost" type="string" length="1024"/>
    <property name="displayName" type="string" length="400"/>
    <property name="fullPath" type="materialized_clob" length="8192"/>
    <property name="uniqueNameHash" type="string" length="128" index="spt_target_unique_name_hash"/>
    <property name="attributes" type="sailpoint.persistence.XmlType" length="100000000"/>
    <property name="nativeObjectId" type="string" length="322" index="spt_target_native_obj_id"/>
    <many-to-one embed-xml="false" name="parent" class="sailpoint.object.Target"/>
    <property name="targetSize" type="java.lang.Long"/>
    <property name="lastAggregation" type="sailpoint.persistence.DateType" index="spt_target_last_agg"/>
    
  </class>
</hibernate-mapping>

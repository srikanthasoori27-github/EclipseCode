<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
  "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
  "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd" [
  <!ENTITY SailPointObjectChild SYSTEM "classpath://sailpoint/object/SailPointObjectChild.hbm.xml">
]>

<!-- (c) Copyright 2008 SailPoint Technologies, Inc., All Rights Reserved. -->

<hibernate-mapping>
  <class name="sailpoint.object.IdentityHistoryItem">

    &SailPointObjectChild;

    <many-to-one embed-xml="false" name="identity" column="identityId" class="sailpoint.object.Identity"/>

    <property name="type">
      <type name="sailpoint.persistence.EnumType">
        <param name="enumClassName">sailpoint.object.IdentityHistoryItem$Type</param>
      </type>
    </property>

    <property name="certifiableDescriptor" type="sailpoint.persistence.XmlType"
      length="100000000"/>

    <property name="action" type="sailpoint.persistence.XmlType"
      length="100000000"/>

    <property name="certificationLink" type="sailpoint.persistence.XmlType"
      length="100000000"/>

    <property name="comments" type="materialized_clob" length="8192"/>

    <property name="certificationType" index="spt_id_hist_item_cert_type">
      <type name="sailpoint.persistence.EnumType">
        <param name="enumClassName">sailpoint.object.CertificationItem$Type</param>
      </type>
    </property>

    <property name="status" index="spt_id_hist_item_status">
      <type name="sailpoint.persistence.EnumType">
        <param name="enumClassName">sailpoint.object.CertificationAction$Status</param>
      </type>
    </property>

    <property name="actor" type="string" length="128" index="spt_id_hist_item_actor" />

    <property name="entryDate" type="sailpoint.persistence.DateType" index="spt_id_hist_item_entry_date" />

    <property name="application" type="string" length="128" index="spt_id_hist_item_application" />

    <property name="instance" type="string" length="128" index="spt_id_hist_item_instance" />

    <property name="account" type="string" length="128" index="spt_id_hist_item_account_ci" />

    <property name="nativeIdentity" type="string" length="322" index="spt_id_hist_item_ntv_id_ci" />

    <property name="attribute" type="string" length="450" index="spt_id_hist_item_attribute_ci" />

    <!-- set this to the max size for an indexable column -->
    <property name="value" type="string" length="450" index="spt_id_hist_item_value_ci" />

    <property name="policy" type="string" length="255" index="spt_id_hist_item_policy" />

    <property name="constraintName" type="string" length="2000" />

    <property name="role" type="string" length="255" index="spt_id_hist_item_role" />

  </class>
</hibernate-mapping>

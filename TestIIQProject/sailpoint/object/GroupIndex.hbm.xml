<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
  "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
  "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd" [
  <!ENTITY IndexBase "group_index">
  <!ENTITY SailPointObject SYSTEM "classpath://sailpoint/object/SailPointObject.hbm.xml">
  <!ENTITY GenericIndex SYSTEM "classpath://sailpoint/object/GenericIndex.hbm.xml">
  <!ENTITY BaseIdentityIndex SYSTEM "classpath://sailpoint/object/BaseIdentityIndex.hbm.xml">
]>

<!-- (c) Copyright 2008 SailPoint Technologies, Inc., All Rights Reserved. -->

<hibernate-mapping>
  <class name="sailpoint.object.GroupIndex">

    &SailPointObject;
    &GenericIndex;
    &BaseIdentityIndex;

    <many-to-one embed-xml="false" name="definition" class="sailpoint.object.GroupDefinition"/>

    <property name="name"/>
    <property name="memberCount"/>
    <property name="bandCount"/>
    <property name="band1"/>
    <property name="band2"/>
    <property name="band3"/>
    <property name="band4"/>
    <property name="band5"/>
    <property name="band6"/>
    <property name="band7"/>
    <property name="band8"/>
    <property name="band9"/>
    <property name="band10"/>
    <property name="certificationsDue"/>
    <property name="certificationsOnTime"/>

  </class>
</hibernate-mapping>

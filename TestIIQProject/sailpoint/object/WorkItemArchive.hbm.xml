<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
  "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
  "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd" [
  <!ENTITY SailPointObject SYSTEM "classpath://sailpoint/object/SailPointObject.hbm.xml">
]>

<!-- (c) Copyright 2008 SailPoint Technologies, Inc., All Rights Reserved. -->

<hibernate-mapping>
  <class name="sailpoint.object.WorkItemArchive">

    <!-- sigh...we inherit an owner reference with indexes that we don't need here -->
    &SailPointObject;

    <property name="workItemId" type="string" length="128" index="spt_item_archive_workItemId"/>
    <property name="name" type="string" length="255" index="spt_item_archive_name"/>
    <property name="ownerName" type="string" length="255" index="spt_item_archive_owner_ci"/>
    <property name="identityRequestId" length="128" index="spt_item_archive_ident_req"/>

    <property name="assignee" type="string" length="255" index="spt_item_archive_assignee_ci"/>
    <property name="requester" type="string" length="255" index="spt_item_archive_requester_ci"/>
    <property name="description" type="string" length="1024"/>
    <property name="handler" type="string" length="255"/>
    <property name="renderer" type="string" length="255"/>
    <property name="targetClass"/>
    <property name="targetId" index="spt_item_archive_target"/>
    <property name="targetName"/>
    <property name="archived" type="sailpoint.persistence.DateType"/>
<!-- not yet, need to reconcile this with Certification.signed
    <property name="signed" type="sailpoint.persistence.DateType"/>
-->
    <property name="type" index="spt_item_archive_type">
      <type name="sailpoint.persistence.EnumType">
        <param name="enumClassName">sailpoint.object.WorkItem$Type</param>
      </type>
    </property>

    <property name="state">
      <type name="sailpoint.persistence.EnumType">
        <param name="enumClassName">sailpoint.object.WorkItem$State</param>
      </type>
    </property>

    <!-- note that "level" is a reserved word in Oracle, should consider
       changing the Java model name too!
     -->
    <property name="level" column="severity" index="spt_item_archive_severity">
      <type name="sailpoint.persistence.EnumType">
        <param name="enumClassName">sailpoint.object.WorkItem$Level</param>
        <param name="enumDefaultValue">Normal</param>
        <param name="persistOrdinal">true</param>
      </type>
    </property>

    <property name="attributes" type="sailpoint.persistence.XmlType" length="100000000"/>
    <property name="systemAttributes" type="sailpoint.persistence.XmlType" length="100000000"/>

    <!--
       These are now all in the attributes map since we don't need to query on them

       <property name="ownerHistory" type="sailpoint.persistence.XmlType" length="100000000"/>
       <property name="comments" type="sailpoint.persistence.XmlType" length="100000000"/>
       <property name="certification" />
       <property name="certificationEntity" />
       <property name="certificationItem" />
   -->

    <!-- figure out what to do here...
    <list name="remediationItems" cascade="all">
      <key column="work_item_id"/>
      <list-index column="idx"/>
      <one-to-many class="sailpoint.object.RemediationItem"/>
    </list>
    -->
    
    <property name="immutable" type="boolean"/>

    <property name="signed" type="boolean"/>
    
    <property name="completer" type="string" length="255" index="spt_item_archive_completer"/>

  </class>
</hibernate-mapping>

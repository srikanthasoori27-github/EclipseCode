<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
  "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
  "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd" [
  <!ENTITY SailPointObject SYSTEM "classpath://sailpoint/object/SailPointObject.hbm.xml">
]>

<!-- (c) Copyright 2008 SailPoint Technologies, Inc., All Rights Reserved. -->

<hibernate-mapping>
  <class name="sailpoint.object.Workflow">

    &SailPointObject;

    <property name="name" type="string" length="128" unique="true" not-null="true"/>
    <property name="description" type="string" length="4000"/>

    <property name="type" type="string" length="128"/>

    <property name="taskType">
      <type name="sailpoint.persistence.EnumType">
        <param name="enumClassName">sailpoint.object.TaskItemDefinition$Type</param>
      </type>
    </property>
    <property name="template" type="boolean"/>
    <property name="explicitTransitions" type="boolean"/>
    <property name="monitored" type="boolean"/>
    <property name="resultExpiration"/>

    <property name="complete" type="boolean"/>
    <property name="handler" type="string" length="128"/>
    <property name="workItemRenderer" type="string" length="128"/>

    <property name="variableDefinitions" type="sailpoint.persistence.XmlType" length="100000000"/>
    <property name="configForm" type="string" length="128"/>
    <property name="steps" type="sailpoint.persistence.XmlType" length="100000000"/>
    <property name="workItemConfig" type="sailpoint.persistence.XmlType" length="100000000"/>

    <property name="variables" type="sailpoint.persistence.XmlType" length="100000000"/>

    <property name="libraries" type="string" length="128"/>
    
    <list name="ruleLibraries"
          cascade="persist,merge,save-update">
      <key column="ruleId"/>
      <list-index column="idx"/>
      <many-to-many column="dependency" class="sailpoint.object.Rule"/>
    </list>

  </class>
</hibernate-mapping>

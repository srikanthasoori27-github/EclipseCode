<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
  "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
  "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd" [
  <!ENTITY SailPointObject SYSTEM "classpath://sailpoint/object/SailPointObject.hbm.xml">
]>

<!-- (c) Copyright 2008 SailPoint Technologies, Inc., All Rights Reserved. -->

<hibernate-mapping>
  <class name="sailpoint.object.Policy">

    &SailPointObject;
    <property name="name" type="string" length="128" unique="true" not-null="true"/>
    <property name="template" type="boolean"/>
    <property name="type"/>
    <property name="typeKey"/>
    <property name="executor"/>
    <property name="configPage"/>
    <property name="certificationActions"/>

    <property name="violationOwnerType">
      <type name="sailpoint.persistence.EnumType">
        <param name="enumClassName">sailpoint.object.Policy$ViolationOwnerType</param>
      </type>
    </property>

    <many-to-one embed-xml="false" name="violationOwner" class="sailpoint.object.Identity"/>
    <many-to-one embed-xml="false" name="violationOwnerRule" class="sailpoint.object.Rule"/>

    <property name="state">
      <type name="sailpoint.persistence.EnumType">
        <param name="enumClassName">sailpoint.object.Policy$State</param>
      </type>
    </property>

    <property name="arguments" type="sailpoint.persistence.XmlType" length="100000000"/>
    <property name="signature" type="sailpoint.persistence.XmlType" length="100000000"/>
    <property name="alert" type="sailpoint.persistence.XmlType" length="100000000"/>

    <list name="SODConstraints" cascade="all">
      <key column="policy"/>
      <list-index column="idx"/>
      <one-to-many class="sailpoint.object.SODConstraint"/>
    </list>
    
    <list name="activityConstraints" cascade="all">
      <key column="policy"/>
      <list-index column="idx"/>
      <one-to-many class="sailpoint.object.ActivityConstraint"/>
    </list>
    
    <list name="genericConstraints" cascade="all">
      <key column="policy"/>
      <list-index column="idx"/>
      <one-to-many class="sailpoint.object.GenericConstraint"/>
    </list>

  </class>
</hibernate-mapping>

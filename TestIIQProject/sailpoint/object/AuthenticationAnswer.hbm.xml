<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
  "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
  "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd" [
  <!ENTITY SailPointObjectChild SYSTEM "classpath://sailpoint/object/SailPointObjectChild.hbm.xml">
]>

<!-- (c) Copyright 2010 SailPoint Technologies, Inc., All Rights Reserved. -->

<hibernate-mapping>
  <class name="sailpoint.object.AuthenticationAnswer">

    <!-- note that we do NOT include SailPointObject because we don't
         assignedScope or assignedScopePath and the related indexes -->
    &SailPointObjectChild;

    <many-to-one embed-xml="false" name="identity" column="identityId" class="sailpoint.object.Identity"/>

    <many-to-one embed-xml="false" name="question" column="questionId" class="sailpoint.object.AuthenticationQuestion"/>

    <!--
      this gets encrypted at the persistence layer.
     -->
    <property name="answer" type="string" length="512"/>

  </class>
</hibernate-mapping>

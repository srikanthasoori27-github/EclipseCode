<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
  "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
  "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd" [
  <!ENTITY SailPointObject SYSTEM "classpath://sailpoint/object/SailPointObject.hbm.xml">
]>

<!-- (c) Copyright 2008 SailPoint Technologies, Inc., All Rights Reserved. -->

<hibernate-mapping>
  <class name="sailpoint.object.RoleMetadata" dynamic-update="true" dynamic-insert="true">
    &SailPointObject;

    <many-to-one embed-xml="false" name="role" class="sailpoint.object.Bundle"/>
    <property name="name"/>
    <property name="additionalEntitlements" type="boolean"/>
    <property name="missingRequired" type="boolean"/>
    <property name="assigned" type="boolean"/>
    <property name="detected" type="boolean"/>
    <property name="detectedException" type="boolean"/>
  </class>
</hibernate-mapping>

<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
  "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
  "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd" [
  <!ENTITY SailPointObject SYSTEM "classpath://sailpoint/object/SailPointObject.hbm.xml">
]>

<!-- (c) Copyright 2008 SailPoint Technologies, Inc., All Rights Reserved. -->

<hibernate-mapping>
  <class name="sailpoint.object.WorkflowTarget">

    &SailPointObject;

    <property name="name" type="string" length="128" />
    <property name="description" type="string" length="1024"/>

    <property name="className"/>
    <property name="objectId"/>
    <property name="objectName"/>
    
    <many-to-one embed-xml="false" name="workflowCase" class="sailpoint.object.WorkflowCase" column="workflow_case_id" insert="false" update="false" not-null="true"/>
  </class>
</hibernate-mapping>

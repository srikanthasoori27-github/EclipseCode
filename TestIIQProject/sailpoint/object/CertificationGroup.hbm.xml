<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
  "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
  "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd" [
  <!ENTITY SailPointObject SYSTEM "classpath://sailpoint/object/SailPointObject.hbm.xml">
]>

<!-- (c) Copyright 2008 SailPoint Technologies, Inc., All Rights Reserved. -->

<hibernate-mapping>
  <class name="sailpoint.object.CertificationGroup">

    &SailPointObject;

    <property name="name" type="string" length="256"/>

    <property name="type" index="spt_cert_group_type">
      <type name="sailpoint.persistence.EnumType">
        <param name="enumClassName">sailpoint.object.CertificationGroup$Type</param>
      </type>
    </property>

    <property name="status" index="spt_cert_group_status">
      <type name="sailpoint.persistence.EnumType">
        <param name="enumClassName">sailpoint.object.CertificationGroup$Status</param>
      </type>
    </property>

    <property name="attributes" type="sailpoint.persistence.XmlType" length="100000000"/>
    <property name="totalCertifications"/>
    <property name="percentComplete" index="spt_cert_grp_perc_comp"/>
    <property name="completedCertifications"/>

    <!-- technically a one-to-one but I don't want to cascade -->
    <many-to-one embed-xml="false" name="definition" column="certification_definition" class="sailpoint.object.CertificationDefinition"/>

    <property name="messages" type="sailpoint.persistence.XmlType" length="100000000"/>

  </class>
</hibernate-mapping>

<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
  "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
  "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd" [
        <!ENTITY IndexBase "spt_partition">
  <!ENTITY SailPointObject SYSTEM "classpath://sailpoint/object/SailPointObject.hbm.xml">
  <!ENTITY TaskItem SYSTEM "classpath://sailpoint/object/TaskItem.hbm.xml">
]>

<!-- (c) Copyright 2008 SailPoint Technologies, Inc., All Rights Reserved. -->

<hibernate-mapping>
  <class name="sailpoint.object.PartitionResult">

    &TaskItem;
    <!-- completed moved from TaskItem in 7.0 so it can be selectively indexed -->
    <property name="completed" type="sailpoint.persistence.DateType"/>

    <many-to-one embed-xml="false" name="taskResult" class="sailpoint.object.TaskResult"/>

    <!--
      Note that although the Java model extends TaskResult
      we don't map everything in it.  Don't need:

      expiration, verified, definition, schedule, pendingSignoffs, signoff
      targetClass/Id/Name, partitioned

      We might need report eventually if we can't find a way to produce
      a composite Jasper report after the task finishes.
    -->

    <property name="name" type="string" length="255" unique="true" not-null="true"/>

    <property name="terminated" column="task_terminated" type="boolean" />

    <property name="completionStatus" index="spt_partition_status">
      <type name="sailpoint.persistence.EnumType">
        <param name="enumClassName">sailpoint.object.TaskResult$CompletionStatus</param>
      </type>
    </property>


  </class>
</hibernate-mapping>

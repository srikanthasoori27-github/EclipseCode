<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
  "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
  "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd" [
  <!ENTITY SailPointObject SYSTEM "classpath://sailpoint/object/SailPointObject.hbm.xml">
]>

<!-- (c) Copyright 2014 SailPoint Technologies, Inc., All Rights Reserved. -->

<hibernate-mapping>
  <class name="sailpoint.object.DeletedObject">

    &SailPointObject;
   
<!-- uuid has a composite index defined with a class annotation -->
    <property name="uuid" type="string" length="128"/>
    <property name="name" type="string" length="128" index="spt_delObj_name_ci"/> 
    <property name="nativeIdentity" type="string" length="322" not-null="true" index="spt_delObj_nativeIdentity_ci"/>
    <property name="lastRefresh" type="sailpoint.persistence.DateType" index="spt_delObj_lastRefresh"/>
    <property name="objectType" type="string" length="128" index="spt_delObj_objectType_ci"/>
    <many-to-one embed-xml="false" name="application" class="sailpoint.object.Application"/>

    <property name="attributes" type="sailpoint.persistence.XmlType" length="100000000"/>

  </class>
</hibernate-mapping>

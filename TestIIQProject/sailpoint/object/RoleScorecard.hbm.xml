<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
  "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
  "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd" [
  <!ENTITY SailPointObject SYSTEM "classpath://sailpoint/object/SailPointObject.hbm.xml">
  <!ENTITY Bundle SYSTEM "classpath://sailpoint/object/Bundle.hbm.xml">
]>

<!-- (c) Copyright 2011 SailPoint Technologies, Inc., All Rights Reserved. -->

<hibernate-mapping>
  <class name="sailpoint.object.RoleScorecard">

    &SailPointObject;

    <many-to-one embed-xml="false" name="role" column="roleId" class="sailpoint.object.Bundle"/>
    
    <property name="members"/>
    <property name="membersWithAdditionalEntitlements" column="membersExtraEnt"/>
    <property name="membersWithMissingRequiredRoles" column="membersMissingReq"/>
    
    <property name="detected"/>
    <property name="detectedAsExceptions" column="detectedExc"/>
                    
    <property name="provisionedEntitlements" column="provisionedEnt"/>
    <property name="permittedEntitlements" column="permittedEnt"/>
  </class>
</hibernate-mapping>

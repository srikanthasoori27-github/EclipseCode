<sailpoint>
	<ImportAction name="merge">
		<Configuration name="SystemConfiguration">
			<Attributes>
				<Map>
				       <!-- Send email on work item assignment/de-assignment -->
					<entry key="workItemAssignmentNotification">
				        <value>
				          <Boolean>true</Boolean>
				        </value>
			      	</entry>
			      	<entry key="workItemAssignmentNotificationRemoval">
				        <value>
				          <Boolean>true</Boolean>
				        </value>
			      	</entry>
           			<!-- Email Templates -->
 					<entry key="accessRequestReminderEmailTemplate" value="EmailTemplate-FrameworkReminder"/>
 					<entry key="certificationReminderEmailTemplate" value="EmailTemplate-FrameworkAccessReviewReminder"/>
 					<entry key="reminderEmailTemplate" value="EmailTemplate-FrameworkAccessReviewReminder"/>
 					<entry key="delegationEmailTemplate" value="EmailTemplate-FrameworkAccessReviewDelegation"/>
      				<entry key="delegationFinishedEmailTemplate" value="EmailTemplate-FrameworkAccessReviewDelegationCompletion"/>
      				<entry key="delegationRevocationEmailTemplate" value="EmailTemplate-Framework-DelegationRevocation"/>
      				<entry key="escalationEmailTemplate" value="EmailTemplate-FrameworkAccessReviewDelinquent"/>
      				<entry key="workItemForwardEmailTemplate" value="EmailTemplate-FrameworkWorkItemForward" />
      				<entry key="workItemAssignmentEmailTemplate" value="EmailTemplate-FrameworkWorkItemAssignment"/>
					<entry key="workItemAssignmentRemovalEmailTemplate" value="EmailTemplate-FrameworkWorkItemAssignmentRemoval"/>
					<entry key="delegationRevocationEmailTemplate" value="EmailTemplate-Framework-DelegationRevocation"/>
					<entry key="openCertsEmailTemplate" value="EmailTemplate-Framework-OpenCertifications"/>
					<entry key="remediationItemAssignmentEmailTemplate" value="EmailTemplate-FrameworkRemediationAssignment"/>
      				<entry key="remediationItemAssignmentRemovalEmailTemplate" value="EmailTemplate-FrameworkRemediationAssignmentRemoval"/>
      				<entry key="remediationEmailTemplate" value="EmailTemplate-Framework-RemediationWorkItem"/>
      				<entry key="signoffEmailTemplate" value="EmailTemplate-Framework-TaskResultSignOff"/>
					<entry key="policyViolationDelegationEmailTemplate" value="EmailTemplate-Framework-PolicyViolationDelegation"/>
      				<entry key="policyViolationEmailTemplate" value="EmailTemplate-Framework-PolicyViolation"/>
      				<entry key="workItemCommentEmailTemplate" value="EmailTemplate-FrameworkWorkItemComment"/>
				</Map>
			</Attributes>
		</Configuration>
	</ImportAction>
</sailpoint>
